<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Client.Activities.LoginActivity">


<android.support.v7.widget.RecyclerView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/game_list_recycler_view"
    android:layout_height="match_parent"
    android:layout_width="match_parent"/>

    <Button
        android:id="@+id/create_game_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/game_list_recycler_view"
        app:layout_constraintEnd_toEndOf="@+id/game_list_recycler_view"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="@+id/game_list_recycler_view"
        app:layout_constraintTop_toTopOf="@+id/game_list_recycler_view"
        app:layout_constraintVertical_bias="0.927"
        android:text="@string/create_game"/>

</android.support.constraint.ConstraintLayout>

