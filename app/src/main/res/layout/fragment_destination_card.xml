<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    tools:context=".Client.Fragments.DestinationCardFragment">

    <TableRow>
    <LinearLayout
        android:id="@+id/dest_card_1_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dest_card_1_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Waiting..."
            android:textAlignment="center" />

        <TextView
            android:id="@+id/dest_card_1_points"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/dest_card_1_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"/>

    </LinearLayout>
    </TableRow>

    <TableRow>
    <LinearLayout
        android:id="@+id/dest_card_2_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dest_card_2_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Waiting..."
            android:textAlignment="center" />

        <TextView
            android:id="@+id/dest_card_2_points"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/dest_card_2_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"/>

    </LinearLayout>
    <Button
        android:id="@+id/dest_card_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp" />
    </TableRow>

    <TableRow>
    <LinearLayout
        android:id="@+id/dest_card_3_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dest_card_3_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Waiting..."
            android:textAlignment="center" />

        <TextView
            android:id="@+id/dest_card_3_points"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/dest_card_3_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"/>

    </LinearLayout>
    </TableRow>


</TableLayout>
